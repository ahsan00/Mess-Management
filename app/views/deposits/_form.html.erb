<%= form_for(@deposit,:html => {:class => "form-horizontal center"},remote: true) do |f|  %>

  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Add Balance</h4>
    <button type="button" class="close" data-dismiss="modal">x</button>

  </div>

  <div class="modal-body">

    <div class="form-group">
      <%=label_tag @deposit.member.name %>
    </div>

    <div class="form-group">
      <%= f.label :balance,class: "col-md-4 control-label" %>
      <%= f.text_field :balance,class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :date,class: "col-md-4 control-label" %>
      <%= f.date_field :date,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :member_id %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :year %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :month %>
    </div>




  </div>

  <div class="modal-footer">
    <%= submit_tag "Save", class: "btn btn-primary" %>
  </div>
<%end %>



















