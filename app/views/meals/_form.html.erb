<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Update meal</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>

</div>
<div class="modal-body">
      <div class="form-group">
        <label>Date:</label>
        <label><%= @date %></label>
      </div>
  <%= form_tag meals_path, method: 'post',remote: true do  %>


      <div class="form-group">
          <div class="container">
              <div class="row">
                <% @meals.each do |meal| %>
                  <div class="col-sm col-md">
                    <label><%= meal.member.name  %></label>

                  </div>
                  <div class="col-sm col-md">

                    <%= text_field_tag 'quantity[]', meal.quantity,class: "form-inline" %>

                  </div>

                  <%= hidden_field_tag  'member_id[]', meal.member_id %>
                <%end%>

              </div>
          </div>
      </div>
<!--        <label><%#= meal.member.name %></label>-->
        <%#= text_field_tag 'quantity[]', meal.quantity,class: "form-control",:id =>"name" %>



    <%= hidden_field_tag :meal_day, @day %>
    <%= hidden_field_tag :member_meal,@member_per_meal  %>
    <%= hidden_field_tag :month, @month%>
    <%= hidden_field_tag :year, @year %>
    <%= hidden_field_tag :date, @date %>
    <%= submit_tag "Update", class: "btn btn-primary" %>
  <%end %>
</div>

<div class="modal-footer">

</div>