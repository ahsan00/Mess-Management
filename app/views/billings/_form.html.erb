
<%= form_for(@billing,:html => {:class => "form-horizontal center"},remote: true) do |f|  %>
<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Add Bill of current month</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>

</div>

<div class="modal-body">

  <div class="form-group">
    <%= f.label :amount,class: "col-md-4 control-label" %>
    <%= f.text_field :amount,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :purpose,class: "col-md-4 control-label" %>
    <%= f.text_field :purpose,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :date,class: "col-md-4 control-label" %>
    <%= f.date_field :date,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.hidden_field :year %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :month %>
  </div>

</div>

<div class="modal-footer">
  <%= submit_tag "Save", class: "btn btn-primary" %>
</div>
<%end %>


















