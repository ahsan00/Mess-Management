
<tr id="total-<%= billing.id %>" >
  <td><%= billing.date %></td>
  <td><%= billing.purpose %></td>
  <td><%= billing.amount %></td>
  <%if billing.status >0 %>
    <td><%= link_to "already Paid",class:'btn btn-primary btn-lg' %></td>
    <%else %>
    <td class="total"><%=link_to  'Unpaid',billing_path({id: billing.id,amount: billing.amount,purpose: billing.purpose,date: Date.today,month: @month,year: @year,status: 1,billing:{id: billing.id,amount: billing.amount,purpose: billing.purpose,date: Date.today,month: @month,year: @year,status: 1 }}),method: "put",class: 'btn btn-primary btn-lg',remote: true, data: { confirm: 'Are you sure?' } %></td>
<!--    <td class="total"  ><%#=link_to  'Unpaid',deposits_path({deposit:{year: params[:year],month: params[:month].to_i+1,date: Date.today,balance:  @mebertotaldeposit[member.id]- @membertoalmeal[member.id]*params[:mealrate].to_f,member_id: member.id,deposited_from: "1"}}),method: "post",class: 'btn btn-primary btn-lg',remote: true, data: { confirm: 'Are you sure?' } %></td>-->
  <%end %>
</tr>



